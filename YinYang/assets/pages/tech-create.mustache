<form>
    <div class="form-group">
        <label for="tech-title">Title</label>
        <input id="tech-title" type="text" class="form-control" placeholder="Name of tech" required data-minlength="3">
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
        <label class="control-label">Select File</label>
        <input id="tech-file" type="file" class="file" required data-file-single data-file-type="image/png">
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
        <div class="help-block with-errors"></div>
    </div>
    <button type="submit" class="btn btn-default">Publish Tech</button>
</form>